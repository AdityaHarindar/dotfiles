# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = AdityaHarindar
	email = aditya.harindar@gmail.com
[alias]
	st = status
	ps = push
	ci = commit
	pl = pull
	ft = fetch
	br = branch
	co = checkout
	d = diff --color=always
[pull]
	rebase = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	side-by-side = false
	line-numbers = true
	syntax-theme = Solarized (dark)
	navigate = true
[push]
	autoSetupRemote = true
